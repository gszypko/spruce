# Configuration file
# One config assignment per line
# Anything after a '#' is considered a comment
# Integer and double configs must be formatted s.t. std::stoi and std::stod can convert them
# Boolean configs must be given as "true" or "false"
# Boundary condition configs must be set as one of {"periodic","wall","open"}

# Iteration settings
max_iterations = 5
iter_output_interval = 1
time_output_interval = -1.0  # negative value means simulation time ignored for output interval

# Boundary conditions
x_bound_1 = open
x_bound_2 = open
y_bound_1 = open
y_bound_2 = open

# Safety factors
epsilon = 0.1
epsilon_viscous = 1.0

# Variable lower bounds
dt_thermal_min = 1.0e-4
rho_min = 1.0e-30
temp_min = 1.0e4
thermal_energy_min = 1.0e-6

# All of the (comma-separated) variables given here will be written out in mhd.out files
# See fileio.cpp for a full list of variable names.
output_flags = rho, temp, press, rad, energy, v_x, v_y, dt_thermal

#---------- SOLAR CONFIGS ----------#

# Radiative losses
radiative_losses = false
radiation_ramp = 1.0e3
temp_chromosphere = 3.0e4 
epsilon_rad = 0.1 # safety factor for subcycling time step

# Ambient heating
ambient_heating = false
heating_rate = 1.0e-4

# Thermal conduction (Spitzer conductivity)
thermal_conduction = false
flux_saturation = false
epsilon_thermal = 0.1 # safety factor for subcycling time step

#------------------------------------#