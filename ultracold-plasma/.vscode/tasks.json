{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-8 build active file",
            "command": "/usr/bin/g++-8",
            "args": [
                "-I", 
                "${workspaceFolder}",
                "${fileDirname}/source/",

                "-std=c++17",
                "-fopenmp",
                "-g",

                "${file}",
                "${workspaceFolder}/grid.cpp",
                "${workspaceFolder}/utils.cpp",
                "${workspaceFolder}/derivs.cpp",
                "${workspaceFolder}/plasmadomain.cpp",
                "${workspaceFolder}/fileio.cpp",
                "${workspaceFolder}/evolution.cpp",
                "${workspaceFolder}/main.cpp",
                "${fileDirname}/source/*",
                
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                
                "-lm",
                "-lstdc++fs", // <filesystem> library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}