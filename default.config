# Configuration file
# One config assignment per line
# Anything after a '#' is considered a comment
# Integer and double configs must be formatted s.t. std::stoi and std::stod can convert them
# Boolean configs must be given as "true" or "false"
# Boundary condition configs must be set as one of {"periodic","wall","open"}

# Iteration settings
max_iterations = 10
iter_output_interval = 1
time_output_interval = -1.0  # negative value means simulation time ignored for output interval
std_out_interval = 5    # number of iterations between short updates written to standard out (negative value means no updates written to std out)
safe_state_mode = false  # when true, writes out a state file at each iteration (very slow); when false, only does so at end of successful run

# Boundary conditions
x_bound_1 = periodic
x_bound_2 = periodic
y_bound_1 = wall
y_bound_2 = open
open_boundary_strength = 1.0
x_origin = lower    # lower, center, or upper
y_origin = lower    # lower, center, or upper

# Safety factors
epsilon = 0.1
epsilon_viscous = 1.0

# Variable lower bounds
rho_min = 1.0e-30
temp_min = 1.0e4
thermal_energy_min = 1.0e-6

# All of the (comma-separated) variables given here will be written out in mhd.out files
# See fileio.cpp for a full list of variable names.
output_flags = rho, temp, press, rad, thermal_energy, v_x, v_y, dt_thermal

#---------- SOLAR CONFIGS ----------#

# Radiative losses
radiative_losses = true
radiation_ramp = 1.0e3
temp_chromosphere = 3.0e4 
epsilon_rad = 0.1 # safety factor for subcycling time step

# Ambient heating
ambient_heating = true
heating_rate = 1.0e-4

# Thermal conduction (Spitzer conductivity)
thermal_conduction = true
flux_saturation = true
epsilon_thermal = 0.1 # safety factor for subcycling time step
dt_thermal_min = 1.0e-4

#------------------------------------#
