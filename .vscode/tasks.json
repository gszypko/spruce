{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-8 build active file",
            "command": "/usr/bin/g++-8",
            "args": [
                "-I", 
                "${workspaceFolder}/source/",
                "-I", 
                "${workspaceFolder}/source/mhd/",
                "-I",
                "${workspaceFolder}/source/user-interface/",

                "-std=c++17",
                "-fopenmp",
                "-g",

                "${file}",
                "${workspaceFolder}/source/mhd/*",
                "${workspaceFolder}/source/user-interface/*",
                
                "-o",
                "${workspaceFolder}/run",
                
                "-lm",
                "-lstdc++fs", // <filesystem> library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}