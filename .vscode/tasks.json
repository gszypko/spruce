{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-10 build active file",
            "command": "/usr/bin/g++-10",
            "args": [
                "-I", 
                "${workspaceFolder}/source/",
                "-I", 
                "${workspaceFolder}/source/mhd/",
                "-I",
                "${workspaceFolder}/source/user-interface/",
                "-I",
                "${workspaceFolder}/source/solar/",

                "-std=c++20",
                "-fopenmp",
                "-g",

                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/source/mhd/*",
                "${workspaceFolder}/source/user-interface/*",
                "${workspaceFolder}/source/solar/*",
                
                "-o",
                "${workspaceFolder}/run",
                
                "-lm",
                "-lstdc++fs", // <filesystem> library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}